{
    "openapi": "3.0.0",
    "info": {
        "title": "School App API swagger documentation",
        "description": "This is a School API Documentation",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": "apiteam@swagger.io"
